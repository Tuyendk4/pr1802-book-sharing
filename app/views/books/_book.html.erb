<div class="card">
  <div class="row">
    <div class="col-md-5 wrapthumbnail">
      <a href="#">
        <% if book.pictures? %>
          <div class="thumbnail" style="background-image:url(<%= book.pictures.first.url %>);">
          </div>
        <% end %>
      </a>
    </div>
    <div class="col-md-7">
      <div class="card-block">
        <h2 class="card-title"><%= link_to book.title, book_path(book)%></h2>
        <h4 class="card-text">
          <%= sanitize book.description %>
        </h4>
        <div class="metafooter">
          <div class="wrapfooter">
            <span class="meta-footer-thumb">
              <%= link_to gravatar_for(book.user, size: 50,
                alt: book.user.name), book.user %>
            </span>
            <span class="author-meta">
              <span class="post-name">
                <%= link_to book.user.name, book.user %>
              </span>
              <br/>
              <span class="post-date">
                <%= book.created_at.strftime("%d %b %Y") %>
                <% if current_user?(book.user) %>
                  <span class="dot"></span>
                  <%= link_to t(".edit"), edit_book_path(book) %>
                  <span class="dot"></span>
                  <%= link_to t(".delete"), book, method: :delete,
                    data: { confirm: t(".destroy_confirm") } %>
                <% end %>
              </span>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
