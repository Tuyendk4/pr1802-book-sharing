<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <% provide :button_text, t(".post") %>
        <%= render 'shared/book_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Book Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="mainheading center">
    <h1 class="sitetitle"><%= t ".site_title" %></h1>
    <p class="lead"><%= t ".lead" %></p>
    <%= link_to t(".sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
